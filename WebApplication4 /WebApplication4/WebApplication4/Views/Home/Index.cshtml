@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <h1 class="display-3 text-primary fw-bold">Welcome to FootballHub</h1>
    <p class="lead">Your ultimate football management platform!</p>

    <hr class="my-4">

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Teams</h5>
                    <p class="card-text">View and manage football teams.</p>
                    <a asp-controller="TeamsView" asp-action="Index" class="btn btn-primary btn-sm">View Teams</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Players</h5>
                    <p class="card-text">Manage player details and performance.</p>
                    <a asp-controller="PlayersView" asp-action="Index" class="btn btn-success btn-sm">View Players</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Matches</h5>
                    <p class="card-text">Track and analyze match results.</p>
                    <a asp-controller="MatchesView" asp-action="Index" class="btn btn-danger btn-sm">View Matches</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <div class="mt-4">
        <p class="text-muted">
            Learn more about <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.
        </p>
    </div>
</div>
