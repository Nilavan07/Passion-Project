@model IEnumerable<WebApplication4.Dtos.MatchDto>

@{
    ViewData["Title"] = "Matches";
}

<h1>Matches</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Match</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>Date</th>
            <th>Score</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.HomeTeamName</td>
            <td>@item.AwayTeamName</td>
            <td>@item.MatchDate.ToString("yyyy-MM-dd")</td>
            <td>@item.HomeTeamScore - @item.AwayTeamScore</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> <!-- âœ… Delete Button -->
            </td>
        </tr>
    }
    </tbody>
</table>
