@model WebApplication4.Dtos.MatchDto

@{
    ViewData["Title"] = "Delete Match";
}

<h1>Delete Match</h1>
<h3>Are you sure you want to delete this match?</h3>

<div>
    <p><strong>Home Team:</strong> @Model.HomeTeamName</p>
    <p><strong>Away Team:</strong> @Model.AwayTeamName</p>
    <p><strong>Date:</strong> @Model.MatchDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Score:</strong> @Model.HomeTeamScore - @Model.AwayTeamScore</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
