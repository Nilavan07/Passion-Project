@model IEnumerable<WebApplication4.Dtos.PlayerDto>

@{
    ViewData["Title"] = "Players";
}

<h1>Players</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Player</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Age</th>
            <th>Goals</th>
            <th>Assists</th>
            <th>Team</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var player in Model)
    {
        <tr>
            <td>@player.Name</td>
            <td>@player.Position</td>
            <td>@player.Age</td>
            <td>@player.GoalsScored</td>
            <td>@player.Assists</td>
            <td>@player.TeamName</td>
            <td>
                <a asp-action="Details" asp-route-id="@player.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@player.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@player.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
