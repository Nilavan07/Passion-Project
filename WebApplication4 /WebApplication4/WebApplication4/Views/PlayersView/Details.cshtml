@model WebApplication4.Dtos.PlayerDto

<h1>Player Details</h1>

<div class="card">
    <div class="card-body">
        <h2 class="card-title">@Model.Name</h2>
        <p><strong>Position:</strong> @Model.Position</p>
        <p><strong>Age:</strong> @Model.Age</p>
        <p><strong>Goals:</strong> @Model.GoalsScored</p>
        <p><strong>Assists:</strong> @Model.Assists</p>
        <p><strong>Team:</strong> @Model.TeamName</p>
    </div>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to Players</a>
</p>
