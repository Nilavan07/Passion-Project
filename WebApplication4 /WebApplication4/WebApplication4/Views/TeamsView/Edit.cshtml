@model WebApplication4.Dtos.TeamDto

@{
    ViewData["Title"] = "Edit Team";
}

<h1>Edit Team</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Coach</label>
        <input asp-for="Coach" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Stadium</label>
        <input asp-for="Stadium" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Founded Year</label>
        <input asp-for="FoundedYear" type="number" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
</form>
