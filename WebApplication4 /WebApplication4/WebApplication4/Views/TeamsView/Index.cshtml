@model IEnumerable<WebApplication4.Dtos.TeamDto>

@{
    ViewData["Title"] = "Teams";
}

<h1>Teams</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-warning">@ViewBag.Message</div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Coach)</th>
                <th>@Html.DisplayNameFor(model => model.Stadium)</th>
                <th>@Html.DisplayNameFor(model => model.FoundedYear)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Coach</td>
                <td>@item.Stadium</td>
                <td>@item.FoundedYear</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No teams available.</p>
}
